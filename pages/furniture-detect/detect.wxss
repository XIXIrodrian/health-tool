/* pages/furniture-detect/detect.wxss */

.container {
  min-height: 100vh;
  padding: 32rpx;
  background-color: var(--bg-gray);
}

.page-header {
  text-align: center;
  margin-bottom: 48rpx;
}

.page-title {
  display: block;
  font-size: 40rpx;
  font-weight: bold;
  color: var(--text-primary);
  margin-bottom: 16rpx;
}

.page-desc {
  display: block;
  font-size: 28rpx;
  color: var(--text-secondary);
}

.camera-section {
  margin-bottom: 48rpx;
}

.camera-placeholder {
  width: 100%;
  height: 500rpx;
  background: white;
  border-radius: 24rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  box-shadow: var(--shadow-sm);
}

.placeholder-icon {
  font-size: 120rpx;
  margin-bottom: 24rpx;
  opacity: 0.5;
}

.placeholder-text {
  font-size: 28rpx;
  color: var(--text-tertiary);
}

.action-buttons {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.result-section {
  margin-top: 48rpx;
  padding: 32rpx;
  background: white;
  border-radius: 24rpx;
}

.result-title {
  display: block;
  font-size: 32rpx;
  font-weight: 600;
  color: var(--text-primary);
  margin-bottom: 24rpx;
}

/* 扫描动画遮罩 */
.scanning-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.85);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 9999;
}

.scanning-content {
  display: flex;
  flex-direction: column;
  align-items: center;
}

/* 扫描框 */
.scan-box {
  width: 400rpx;
  height: 400rpx;
  position: relative;
  margin-bottom: 60rpx;
}

/* 扫描线动画 */
.scan-line {
  position: absolute;
  width: 100%;
  height: 4rpx;
  background: linear-gradient(90deg,
    transparent 0%,
    rgba(52, 152, 219, 0.3) 20%,
    rgba(52, 152, 219, 1) 50%,
    rgba(52, 152, 219, 0.3) 80%,
    transparent 100%);
  box-shadow: 0 0 20rpx rgba(52, 152, 219, 0.8);
  animation: scanning 2s ease-in-out infinite;
}

@keyframes scanning {
  0% {
    top: 0;
    opacity: 0;
  }
  10% {
    opacity: 1;
  }
  90% {
    opacity: 1;
  }
  100% {
    top: 100%;
    opacity: 0;
  }
}

/* 四角装饰 */
.corner {
  position: absolute;
  width: 60rpx;
  height: 60rpx;
  border: 4rpx solid #3498db;
}

.corner-tl {
  top: 0;
  left: 0;
  border-right: none;
  border-bottom: none;
  animation: corner-pulse 2s ease-in-out infinite;
}

.corner-tr {
  top: 0;
  right: 0;
  border-left: none;
  border-bottom: none;
  animation: corner-pulse 2s ease-in-out 0.5s infinite;
}

.corner-bl {
  bottom: 0;
  left: 0;
  border-right: none;
  border-top: none;
  animation: corner-pulse 2s ease-in-out 1s infinite;
}

.corner-br {
  bottom: 0;
  right: 0;
  border-left: none;
  border-top: none;
  animation: corner-pulse 2s ease-in-out 1.5s infinite;
}

@keyframes corner-pulse {
  0%, 100% {
    opacity: 0.3;
    transform: scale(1);
  }
  50% {
    opacity: 1;
    transform: scale(1.1);
  }
}

/* 扫描文字 */
.scanning-text {
  display: flex;
  align-items: center;
  margin-bottom: 24rpx;
}

.scan-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #ffffff;
  margin-right: 16rpx;
}

/* 加载点动画 */
.loading-dots {
  display: flex;
  gap: 8rpx;
}

.dot {
  color: #3498db;
  font-size: 24rpx;
  animation: dot-flashing 1.4s infinite;
}

.dot:nth-child(2) {
  animation-delay: 0.2s;
}

.dot:nth-child(3) {
  animation-delay: 0.4s;
}

@keyframes dot-flashing {
  0%, 80%, 100% {
    opacity: 0.3;
    transform: scale(0.8);
  }
  40% {
    opacity: 1;
    transform: scale(1.2);
  }
}

.scan-tip {
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.6);
  text-align: center;
}