/* pages/furniture-guide/detail.wxss */

.container {
  min-height: 100vh;
  background: #f8f9fa;
  padding-bottom: 40rpx;
}

/* 家具信息头部 */
.furniture-header {
  position: relative;
  height: 400rpx;
  overflow: hidden;
}

.header-bg {
  width: 100%;
  height: 100%;
}

.header-overlay {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(180deg, rgba(0, 0, 0, 0.3) 0%, rgba(0, 0, 0, 0.6) 100%);
}

.header-content {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 32rpx;
  color: white;
}

.furniture-name {
  display: block;
  font-size: 44rpx;
  font-weight: bold;
  margin-bottom: 8rpx;
}

.furniture-desc {
  display: block;
  font-size: 26rpx;
  opacity: 0.9;
  margin-bottom: 16rpx;
}

.category-tag {
  display: inline-block;
  padding: 8rpx 20rpx;
  background: rgba(255, 255, 255, 0.2);
  backdrop-filter: blur(10rpx);
  border-radius: 24rpx;
  font-size: 22rpx;
}

/* 介绍区域 */
.intro-section {
  margin: 24rpx 32rpx;
  padding: 24rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 20rpx;
  color: white;
}

.intro-icon {
  font-size: 48rpx;
  margin-bottom: 12rpx;
}

.intro-title {
  display: block;
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 12rpx;
}

.intro-desc {
  display: block;
  font-size: 24rpx;
  line-height: 1.6;
  opacity: 0.95;
}

/* 材质区域 */
.material-section {
  margin: 0 32rpx 32rpx;
}

.section-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 24rpx;
  border-radius: 16rpx 16rpx 0 0;
  color: white;
}

.good-header {
  background: linear-gradient(135deg, #11998e 0%, #38ef7d 100%);
}

.bad-header {
  background: linear-gradient(135deg, #eb3349 0%, #f45c43 100%);
}

.header-left {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.section-icon {
  font-size: 32rpx;
  font-weight: bold;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
}

.material-count {
  font-size: 24rpx;
  padding: 6rpx 16rpx;
  background: rgba(255, 255, 255, 0.3);
  border-radius: 20rpx;
}

/* 材质列表 */
.material-list {
  background: white;
  border-radius: 0 0 16rpx 16rpx;
  padding: 24rpx;
}

.material-card {
  padding: 24rpx;
  border-radius: 16rpx;
  margin-bottom: 16rpx;
}

.material-card:last-child {
  margin-bottom: 0;
}

.good-card {
  background: linear-gradient(135deg, #f0fff4 0%, #e6f7ed 100%);
  border: 2rpx solid #38ef7d;
}

.bad-card {
  background: linear-gradient(135deg, #fff5f5 0%, #ffe6e6 100%);
  border: 2rpx solid #f45c43;
}

/* 材质头部 */
.material-header {
  display: flex;
  align-items: flex-start;
  gap: 16rpx;
  margin-bottom: 20rpx;
  padding-bottom: 20rpx;
  border-bottom: 2rpx dashed rgba(0, 0, 0, 0.1);
}

.material-icon {
  width: 48rpx;
  height: 48rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  font-weight: bold;
  flex-shrink: 0;
}

.good-icon {
  background: #38ef7d;
  color: white;
}

.bad-icon {
  background: #f45c43;
  color: white;
}

.material-info {
  flex: 1;
}

.material-name {
  display: block;
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 8rpx;
}

.material-performance {
  display: block;
  font-size: 24rpx;
  color: #666;
}

/* 详情区域 */
.detail-section {
  margin-bottom: 20rpx;
}

.detail-section:last-child {
  margin-bottom: 0;
}

.detail-label {
  display: block;
  font-size: 26rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 12rpx;
}

/* 优势列表 */
.advantage-list,
.disadvantage-list,
.safety-list,
.danger-list {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.advantage-item {
  font-size: 24rpx;
  color: #2d7a4f;
  line-height: 1.6;
}

.disadvantage-item {
  font-size: 24rpx;
  color: #666;
  line-height: 1.6;
}

.safety-item {
  font-size: 24rpx;
  color: #d97706;
  line-height: 1.6;
}

.danger-item {
  font-size: 24rpx;
  color: #c62828;
  line-height: 1.6;
  font-weight: 500;
}

/* 安全区域特殊样式 */
.safety-section {
  background: rgba(251, 191, 36, 0.1);
  padding: 16rpx;
  border-radius: 12rpx;
  border: 2rpx solid rgba(251, 191, 36, 0.3);
}

.danger-section {
  background: rgba(239, 68, 68, 0.1);
  padding: 16rpx;
  border-radius: 12rpx;
  border: 2rpx solid rgba(239, 68, 68, 0.3);
}

/* 底部建议 */
.suggestion-section {
  margin: 0 32rpx;
  padding: 24rpx;
  background: white;
  border-radius: 20rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.08);
}

.suggestion-icon {
  font-size: 48rpx;
  margin-bottom: 12rpx;
}

.suggestion-title {
  display: block;
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 16rpx;
}

.suggestion-text {
  display: block;
  font-size: 26rpx;
  color: #666;
  line-height: 1.8;
}