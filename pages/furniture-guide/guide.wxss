/* pages/furniture-guide/guide.wxss */

.container {
  min-height: 100vh;
  background: linear-gradient(180deg, #f8f9fa 0%, #ffffff 100%);
  padding-bottom: 40rpx;
}

/* 页面头部 */
.page-header {
  text-align: center;
  padding: 48rpx 32rpx 32rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
}

.page-title {
  display: block;
  font-size: 44rpx;
  font-weight: bold;
  margin-bottom: 12rpx;
}

.page-desc {
  display: block;
  font-size: 26rpx;
  opacity: 0.9;
}

/* 搜索区域 */
.search-section {
  padding: 24rpx 32rpx;
}

.search-bar {
  display: flex;
  align-items: center;
  background: white;
  border-radius: 48rpx;
  padding: 16rpx 24rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.08);
}

.search-icon {
  width: 32rpx;
  height: 32rpx;
  margin-right: 12rpx;
  opacity: 0.5;
}

.search-input {
  flex: 1;
  font-size: 28rpx;
}

/* 分类标签 */
.category-tabs {
  display: flex;
  padding: 0 32rpx 24rpx;
  gap: 16rpx;
  overflow-x: auto;
  white-space: nowrap;
}

.tab-item {
  padding: 16rpx 32rpx;
  background: white;
  border-radius: 48rpx;
  font-size: 26rpx;
  color: #666;
  transition: all 0.3s;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.06);
  flex-shrink: 0;
}

.tab-item.active {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  box-shadow: 0 4rpx 12rpx rgba(102, 126, 234, 0.3);
}

/* 家具列表 */
.furniture-list {
  padding: 0 32rpx;
}

.furniture-card {
  background: white;
  border-radius: 24rpx;
  margin-bottom: 24rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.08);
  transition: transform 0.3s, box-shadow 0.3s;
}

.furniture-card:active {
  transform: scale(0.98);
}

/* 家具图片 */
.card-image-wrapper {
  position: relative;
  width: 100%;
  height: 360rpx;
  background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
}

.card-image {
  width: 100%;
  height: 100%;
}

.category-badge {
  position: absolute;
  top: 16rpx;
  right: 16rpx;
  background: rgba(0, 0, 0, 0.6);
  backdrop-filter: blur(10rpx);
  color: white;
  padding: 8rpx 20rpx;
  border-radius: 24rpx;
  font-size: 22rpx;
}

/* 卡片内容 */
.card-body {
  padding: 24rpx;
}

.furniture-name {
  display: block;
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 8rpx;
}

.furniture-desc {
  display: block;
  font-size: 24rpx;
  color: #999;
  margin-bottom: 20rpx;
}

/* 材质统计 */
.material-stats {
  display: flex;
  gap: 16rpx;
  margin-bottom: 20rpx;
}

.stat-item {
  flex: 1;
  display: flex;
  align-items: center;
  gap: 8rpx;
  padding: 12rpx 16rpx;
  border-radius: 12rpx;
  font-size: 22rpx;
}

.stat-good {
  background: #e8f5e9;
  color: #2e7d32;
}

.stat-bad {
  background: #ffebee;
  color: #c62828;
}

.stat-icon {
  font-size: 24rpx;
  font-weight: bold;
}

.stat-text {
  font-size: 22rpx;
}

/* 查看详情按钮 */
.view-detail-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 20rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 12rpx;
  color: white;
  font-size: 26rpx;
  font-weight: 500;
}

.arrow {
  margin-left: 8rpx;
  font-size: 32rpx;
  font-weight: bold;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 120rpx 32rpx;
}

.empty-icon {
  width: 200rpx;
  height: 200rpx;
  opacity: 0.3;
  margin-bottom: 24rpx;
}

.empty-text {
  font-size: 28rpx;
  color: #999;
}